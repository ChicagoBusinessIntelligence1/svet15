@import 'jeet'

size-xs = 350px
size-s-d = 400px
size-md-d = 700px
size-lg-d = 1050px
size-xl = 1800px

.body-desktop
    background-color slategrey

.icon-text-desk
    margin-top 15px
    margin-bottom 15px
    font-weight bold
    line-height 130%
    display block
    font-size 1.6em !important
    &:hover
    &:active
    &:focus
        text-decoration none
        color navajowhite
    +below(size-lg-d)
        font-size 1.5em !important
    +below(size-md-d)
        font-size 1em !important

.p-section
.a-yp-desktop
.p-ad
    font-size 110%
    line-height 130%
    +below(size-lg-d)
        font-size 90%
        line-height 120%
    +below(size-md-d)
        font-size 80%
        line-height 120%

.h4-section
    color #393939 !important
    font-size 110%
    line-height 130%
    margin-bottom 5px
    margin-top 0px

.p-section
    color #494949 !important
    margin-bottom 5px
    margin-top 0px


.a-yp-desktop
    color floralwhite
    text-decoration underline
    &:hover
    &:active
    &:focus
        color antiquewhite
        text-decoration none

.panel-section
    background-color #fffaf0
    border-radius 0px
    padding 15px
    height 150px



