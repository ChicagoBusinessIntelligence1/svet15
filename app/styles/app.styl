@import 'jeet'
@import 'reset.css'

/*Values*/

zize-med = 960px

/*Styles*/
html
    background: #fff;

.backfaceVisibility
    -webkit-backface-visibility: visible;
    backface-visibility: visible;

body
    background linear-gradient(top, white, black)
    font-size 14px
    line-height 20px
    color #3E3A3B

section
    center(98%)

article
    p
        max-width 100%

.svet-services
    margin-top 10px
    col(1)
    h3
        text-align center

.text-center
    text-align center
    color green

.productsServises
    col(1 / 4, cycle:4)
    h4
        font-size 14px
        margin-bottom 30px
    p
        margin-bottom 10px
        font-size 12px
    h4, p
        text-align center
    +below(size-med)
        col(1 / 2, cycle:2)

.text-center
    text-align center

.svet-market
    min-width: 100%;
    line-height 26px
