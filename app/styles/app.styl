@import 'jeet'

size-xs = 350px
size-s = 400px
size-m = 500px
size-l = 1050px
size-xl = 1800px

color-main = #3E3A3B

/*Headers*/
h1
    +below(size-m)
        font-size 32px

h2
    +below(size-m)
        font-size 26px

h3
    +below(size-m)
        font-size 20px

h4
    +below(size-m)
        font-size 18px
        margin-bottom 5px !important
        margin-top 5px !important
    +below(size-s)
        font-size 16px
        margin-bottom 5px !important
        margin-top 5px !important
    +below(size-xs)
        font-size 15px
        margin-bottom 5px !important
        margin-top 5px !important

p
    +below(size-m)
        font-size 13px
        line-height 16px
    +below(size-s)
        font-size 12px
        line-height 16px
    +below(size-xs)
        font-size 11px
        line-height 14px

hr
    color lighten(color-main, 50%)

html
    background: #f5f5f5;

.backfaceVisibility
    -webkit-backface-visibility: visible;
    backface-visibility: visible;

.text-dark
    color #393939 !important

body
    font-size 14px
    line-height 20px
    color #3E3A3B

/**********************
    =Header
**********************/
.img-hamb
    width 100%
    +below(size-m)
        width 15%
    +below(size-s)
        width 15%
    +below(size-xs)
        width 15%

.svet-h
    font-weight bold
    margin 0px
    line-height 180%
    +below(size-m)
        line-height 240%
        font-size 22px
    +below(size-s)
        line-height 200%
        font-size 22px
    +below(size-xs)
        line-height 210%
        font-size 18px

/**********************
    =Home
**********************/
.map-info
    width 200px !important

.map-marker-info
    width 150px !important
    height 60px !important

.home-icon-img
    width 70px
    height 70px
    margin-top 15px

.h-home
    margin-top 0px
    font-size 150%
    +below(size-s)
        font-size 90%
    +below(size-xs)
        margin-top 0px
        font-size 80%
        font-weight normal

.town-name
    font-size 100%
    font-weight bold
    color dimgrey

.icon-text
    padding-top 5px
    line-height 130%
    font-size 120%
    &:hover
    &:active
    &:focus
        text-decoration none
        color navajowhite
    +below(size-m)
        padding-top 0px
    +below(size-s)
        font-size 90%
    +below(size-xs)
        font-size 80%
        font-weight normal

.flip-text
    line-height 130%
    font-size 120%
    margin-bottom 5px
    margin-top 0px
    +below(size-m)
        line-height 110%
        padding-top 0px
    +below(size-s)
        font-size 100%
    +below(size-xs)
        font-size 90%
        font-weight normal

.flip-text-sm
    line-height 140%
    font-size 110%
    margin-bottom 5px
    margin-top 0px
    +below(size-m)
        line-height 110%
        padding-top 0px
    +below(size-s)
        font-size 90%
    +below(size-xs)
        font-size 80%
        font-weight normal

.img-logo-mob
    +below(size-m)
        margin-bottom 10px
    +below(size-xs)
        width 40%
        margin 0 auto
        margin-bottom 5px

.em-svet
    font-size 18px
    font-weight 700
    +below(size-xs)
        font-size 14px

.p-svet
    font-size 14px !important
    +below(size-m)
        font-size 14px !important
        line-height 26px
    +below(size-s)
        font-size 12px !important
        line-height 24px
    +below(size-xs)
        font-size 11px !important
        line-height 18px

.img-frame
    width 80%
    display inline-block
    text-align center
    +below(size-m)
        width 65%
    +below(size-s)
        width 60%
    +below(size-xs)
        width 50%
    img
        vertical-align middle

.li-text
    width 70%
    display inline-block
    float left
    text-align left
    +below(size-m)
        width 70%
    +below(size-s)
        width 74%
    +below(size-xs)
        width 80%

.img-section
    width 100px
    height 100px
    z-index 999

/**********************
  =Footer
***********************/
.ravinia-img
    max-width 90%
    max-height 90%
