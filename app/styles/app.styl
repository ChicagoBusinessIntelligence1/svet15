@import 'jeet'
@import 'reset.css'

size-xs = 400px
size-s = 600px
size-m = 800px
size-l = 1050px
size-xl = 1800px

color-main = #3E3A3B

/*Headers*/
h1
    +below(size-m)
        font-size 32px

h2
    +below(size-m)
        font-size 26px

h3
    +below(size-m)
        font-size 20px

h4
    +below(size-m)
        font-size 16px

hr
    color lighten(color-main, 50%)

html
    background: #fff;

.backfaceVisibility
    -webkit-backface-visibility: visible;
    backface-visibility: visible;

body
    font-size 14px
    line-height 20px
    color #3E3A3B

section
    center(98%)

article
    margin-bottom 10px
    margin-top 10px
    p
        +below(size-m)
            font-size 12px
            max-width 100%

.svet-services
    col(10 / 12, offset:1 / 12)
    h3
        text-align center

.sun-times
    col(4 / 12)
    img
        max-width 100%

.chicago-news
    margin-top 30px

.about-content-top
    col(8 / 12)
    +below(size-m)
        col(12 / 12)
    p
        margin-bottom 15px

.dem-content-top
    col(8/ 12)
    +below(size-m)
        col(12 / 12)

.dem-content-bottom
    col(12 / 12)
    +below(size-m)
        col(12 / 12)
    h2
        font-weight normal
    p, h2
        margin-bottom 15px

.about-content-bottom
    col(8 / 12)
    +below(size-m)
        col(12 / 12)
    h2
        font-weight normal
    p, h2
        margin-bottom 15px

.radio-content
    col(3 / 12)
    a
        font-size 12px

.radio-content-inline
    col(1 / 12)
    a
        font-size 12px
        font-weight bold
        text-decoration none
        &:hover
        &:active
        &:focus
            color lighten(color-main, 20%)

.clients-content
    ul
        margin-top 15px
        margin-bottom 15px

.text-center
    text-align center

.svet-media-group
    col(8 / 12, offset:2 / 12)
    +below(size-m)
        col(12 / 12)
    p
        font-size 18px
        line-height 28px
        +below(size-m)
            font-size 90%

.productsServises
    col(1 / 2, cycle:2)
    h3
        margin-bottom 15px
    p
        line-height 26px
        margin-bottom 30px
        +below(size-s)
            font-size 11px
            line-height 16px
    h4, p
        text-align center

.text-center
    text-align center

.home-icon
    max-width 200px

.home-icon-container
    width 150px
    height 150px
    background-color: lighten(#FC6E51, 30%)
    text-align center
    margin 0 auto
    border-radius 100px
    margin-bottom 20px
    +below(size-m)
        width 100px
        height 100px
        border-radius 50px

.h-home
    font-size 25px
    line-height 28px
    font-weight normal
    text-align center
    margin-bottom 15px
    +below(size-m)
        font-size 100%

.h-services
    font-size 32px
    +below(size-m)
        font-size 130%
        margin-bottom 30px
        margin-top 30px

.winter
    a
        color lighten(#374E5A, 30%)
    h4
        color lighten(#374E5A, 20%)

.summer
    a
        color lighten(#DE5779, 10%)
    h4
        color #DE5779

.fall
    a
        color lighten(#FC6E51, 10%)
    h4
        color #FC6E51

.spring
    a
        color lighten(#5A7B6C, 10%)
    h4
        color #5A7B6C

.live-radio
    img
        max-width 100%
        overflow auto
        width 100px
        height auto
    a
        color color-main
        text-decoration none

.test
    background-color #a52a2a

